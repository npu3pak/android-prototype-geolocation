<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MapActivity" />

    <View
        android:id="@+id/button_locate_me"
        android:clickable="true"
        android:onClick="onLocateMeButtonClick"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_locate_me" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <View
            android:id="@+id/button_zoom_in"
            android:clickable="true"
            android:onClick="onZoomInButtonClick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_zoom_in" />

        <View
            android:id="@+id/button_zoom_out"
            android:clickable="true"
            android:onClick="onZoomOutButtonClick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_zoom_out" />
    </LinearLayout>
</FrameLayout>
